{
  "name": "impersonate-agents",
  "displayName": "IA - Tools for Development",
  "version": "2.1.0",
  "description": "A simple chrome extension for impersonate a agent.",
  "type": "module",
  "scripts": {
    "predev": "cross-env NODE_ENV=development node scripts/configure-env.cjs",
    "dev": "plasmo dev",
    "server": "pnpm convex dev",
    "build": "cross-env NODE_ENV=production node scripts/configure-env.cjs && plasmo build && cross-env NODE_ENV=production node scripts/postbuild.cjs",
    "package": "plasmo package",
    "db:export": "node scripts/export-data.cjs",
    "db:import": "node scripts/import-data.cjs",
    "db:import:prod": "node scripts/import-data.cjs --prod",
    "db:deploy": "node scripts/production-import-helper.cjs"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "convex": "^1.21.0",
    "lucide-react": "^0.562.0",
    "plasmo": "^0.90.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "daisyui": "^4.12.14",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "manifest": {
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://*.convex.cloud wss://*.convex.cloud"
    }
  }
}
